@model Book

@{
    ViewData["Title"] = "Libros";
}

<partial name="_Notification" />

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center text-primary">Listado de Libros</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <a asp-controller="Author" asp-action="Index" class="btn btn-lg btn-secondary"><i class="bi bi-list-ul"></i>&nbsp; <strong>Ver Autores</strong></a>
        </div>
        <div class="col-8">
        </div>
        <div class="col-2 text-center">
            <a asp-controller="Book" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-plus-square"></i>&nbsp; <strong>Nuevo Libro</strong></a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-secondary table-striped" width="100%" id="tbBooks">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                            <th>@Html.DisplayNameFor(m => m.Title)</th>
                            <th>Autor</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/book.js">
    </script>
}